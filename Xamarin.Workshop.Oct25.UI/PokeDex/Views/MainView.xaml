<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PokeDex.Views.MainView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PokeDex.RenderedControls;assembly=PokeDex"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:effect="clr-namespace:PokeDex.Effects;assembly=PokeDex"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    Title="Pokedex Tianggee-nised"
    prism:ViewModelLocator.AutowireViewModel="True"
    mc:Ignorable="d">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <controls:RoundedImage
                Margin="10,10,20,10"
                HeightRequest="150"
                HorizontalOptions="End"
                Source="manokpula.jpg"
                WidthRequest="150">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding TrainerCommand}" NumberOfTapsRequired="1" />
                </Image.GestureRecognizers>
            </controls:RoundedImage>
            <CollectionView
                Grid.Row="1"
                HorizontalOptions="FillAndExpand"
                ItemsSource="{Binding PokemonItems}"
                VerticalOptions="FillAndExpand">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Margin="20,5"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Label
                                FontSize="24"
                                HorizontalOptions="Center"
                                Text="{Binding Name}"
                                TranslationX="-80" />
                            <StackLayout
                                HorizontalOptions="Center"
                                Orientation="Horizontal"
                                Spacing="10">
                                <Image
                                    Grid.Row="1"
                                    Aspect="AspectFit"
                                    HeightRequest="150"
                                    Source="{Binding Sprites.FrontDefault}"
                                    WidthRequest="150" />
                                <Label
                                    Margin="3"
                                    FontFamily="{StaticResource FontAwesomeSolid}"
                                    FontSize="44"
                                    HorizontalOptions="End"
                                    Text="&#xf004;"
                                    TextColor="{StaticResource pantoneRed}"
                                    VerticalOptions="Center" />
                                <Image
                                    Grid.Row="1"
                                    Aspect="AspectFit"
                                    HeightRequest="240"
                                    Source="{Binding LovesTianggee}"
                                    WidthRequest="240" />
                            </StackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button
                Grid.Row="2"
                Margin="40,60"
                Clicked="Button_Clicked"
                FontSize="24"
                HeightRequest="66"
                Text="Scan"
                TextColor="White">
                <Button.Effects>
                    <effect:ButtonGDEffect CornerRadius="25" />
                </Button.Effects>
            </Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>